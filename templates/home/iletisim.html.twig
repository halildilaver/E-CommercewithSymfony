{% extends 'frontbase.html.twig' %}

{% block title %}{{ data[0].title }} | İletişim{% endblock %}
{% block keywords %}{{ data[0].keywords }}{% endblock %}
{% block description %}{{ data[0].description }}{% endblock %}

{% block body %}
    {{ include ('admin/messages.html.twig') }}
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <div>
            <p>{{ data[0].contact|raw }}</p>
        </div>
        <!-- form -->


        <div class="contact-grids1 w3agile-6">
            <form method="post">
                <div class="row">
                    <div class="col-md-6 col-sm-6 contact-form1 form-group">
                        <label class="col-form-label">Name</label>
                        <input type="text" class="form-control" name="messages[name]" placeholder="" required="">
                    </div>
                    <div class="col-md-6 col-sm-6 contact-form1 form-group">
                        <label class="col-form-label">E-mail</label>
                        <input type="email" class="form-control" name="messages[email]" placeholder="" required="">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-6 contact-form1 form-group">
                        <label class="col-form-label">Subject</label>
                        <input type="text" class="form-control" name="messages[subject]" placeholder="" required="">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-6 contact-form1 form-group">
                        <label class="col-form-label">Durum</label>
                        <select name="messages[status]" id="selector1" class="form-control">
                            <option>Yeni</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-6 contact-form1 form-group">
                        <input type="hidden" class="form-control" name="messages[ifuser]" placeholder="" required="" value="FALSE">
                    </div>
                </div>
                <div class="contact-me animated wow slideInUp form-group">
                    <label class="col-form-label">Message</label>
                    <textarea name="messages[message]" class="form-control" placeholder="" required=""> </textarea>
                </div>
                <div class="contact-grids1 w3agile-6">
                    <input type="submit" value="Submit">
                </div>
            </form>
        </div>

        <!-- //form -->
    </div>
{% endblock %}

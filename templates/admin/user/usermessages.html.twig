{% extends 'adminbase.html.twig' %}

{% block title %}Messages index{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a><i class="fa fa-angle-right"></i><a href="/admin/user">Üyeler</a><i class="fa fa-angle-right"></i>Üye Mesajları</li>
    </ol>
    <div class="agile-grids">
        <!--four-grids here-->
        <div class="w3l-table-info">
            <h2>Üye Mesajları</h2>
            <table id="table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>E-Mail</th>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Durum</th>
                    <th>Comment</th>
                    <th>Göster</th>
                </tr>
                </thead>
                <tbody>
                {% for message in messages %}
                    <tr>
                        <td data-th="ID"><span class="bt-content">{{ message.id }}</span></td>
                        <td data-th="Parent ID"><span class="bt-content">{{ message.name }}</span></td>
                        <td data-th="Title"><span class="bt-content">{{ message.email }}</span></td>
                        <td data-th="Keywords"><span class="bt-content">{{ message.subject }}</span></td>
                        <td data-th="Description"><span class="bt-content">{{ message.message }}</span></td>
                        <td data-th="Durum"><span class="bt-content">{{ message.status }}</span></td>
                        <td data-th="Yorum"><span class="bt-content">{{ message.comment }}</span></td>
                        <td data-th="Göster"><a href="javascript:openWin('{{ path('admin_messages_show', {'id':  message.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=600,height=500');" class="btn btn-xs btn-primary bg-success dark text-white fw600 text-center">Göster</a></td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

<!DOCTYPE HTML>
<html>
<head>
    <title>{% block title %}Order{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="{% block keywords %}{% endblock %}" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Bootstrap Core CSS -->
    <link href="{{ asset('admin') }}/css/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <!-- Custom CSS -->
    <link href="{{ asset('admin') }}/css/style.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="css/morris.css" type="text/css"/>
    <!-- Graph CSS -->
    <link href="{{ asset('admin') }}/css/font-awesome.css" rel="stylesheet">
    <!-- jQuery -->
    <script src="{{ asset('admin') }}/js/jquery-2.1.4.min.js"></script>
    <!-- //jQuery -->
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css'/>
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <!-- lined-icons -->
    <link rel="stylesheet" href="{{ asset('admin') }}/css/icon-font.min.css" type='text/css' />
    <!-- //lined-icons -->
    <!-- tables -->
    <link rel="stylesheet" type="text/css" href="{{ asset('admin') }}/css/table-style.css" />
    <link rel="stylesheet" type="text/css" href="{{ asset('admin') }}/css/basictable.css" />
    <link rel="stylesheet" type="text/css" href="{{ asset('admin') }}/css/tab.css" />
    <script type="text/javascript" src="{{ asset('admin') }}/js/jquery.basictable.min.js"></script>
</head>
<body>
<div style="width:75%;">
    <h1>Orders</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ order.id }}</td>
        </tr>
        <tr>
            <th>Amount</th>
            <td>{{ order.amount }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ order.name }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ order.address }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ order.city }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ order.phone }}</td>
        </tr>
        <form action="{{ path('admin_orders_update',{'id':order.id}) }}" method="post">
            <tr>
                <th>Shipinfo</th>
                <td> <textarea name="shipinfo" cols="100" rows="3">{{ order.shipinfo }}</textarea></td>
            </tr>
            <tr>
                <th>Admin Note</th>
                <td> <textarea name="note" cols="100" rows="3">{{ order.note }}</textarea></td>
            </tr>
            <tr>
                <th>Status</th>
                <td><select name="status">
                        <option>{{ order.status }}</option>
                        <option>Accepted</option>
                        <option>InShipping</option>
                        <option>Cancelled</option>
                        <option>Completed</option>
                    </select>
                    <input type="submit" value="Güncelle"></td>

            </tr>
        </form>
        </tbody>
    </table>
    <hr>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Sale Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {% set total=0 %}
        {% for rs in orderdetail %}
            <tr>
                <td>{{ rs.id }}</td>
                <td>{{ rs.name }}</td>
                <td>{{ rs.price }}</td>
                <td>{{ rs.quantity }}</td>
                <td>{{ rs.amount }}</td>
                <td>{{ rs.status }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Order Detail</td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="5"><b>Toplam Alışveriş Tutarı: {{ order.amount }} TL</b></td>
        </tr>
        </tbody>
    </table>

</div>
</body>

{% extends 'adminbase.html.twig' %}

{% block title %}Ürünler{% endblock %}

{% block body %}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin">Home</a><i class="fa fa-angle-right"></i>Ürünler</li>
</ol>
<div class="agile-grids">
    <!--four-grids here-->
    <div class="w3l-table-info">
        <div class="bg-effect" align="right">
            <ul class="bt-list">
                <li><a href="{{ path('admin_product_new') }}" class="hvr-icon-float-away col-24 bg-success">Yeni Ürün</a></li>
            </ul>
        </div>
        <h2>Ürünler</h2>
        <table id="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Amount</th>
                <th>Pprice</th>
                <th>Sprice</th>
                <th>Min</th>
                <th>Image</th>
                <th>Gallery</th>
                <th>Category_id</th>
                <th>User_id</th>
                <th>Status</th>
                <th>Göster</th>
                <th>Düzenle</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.title }}</td>
                    <td>{{ product.amount }}</td>
                    <td>{{ product.pprice }}</td>
                    <td>{{ product.sprice }}</td>
                    <td>{{ product.min }}</td>
                    <td><a href="javascript:openWin('{{ path('admin_product_iedit', {'id': product.id})  }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=600,height=500');">
                            {% if product.image == null %}
                                <img src="{{ url('admin') }}/images/addphoto.png" height="32">
                            {% else %}
                                <img src="{{ asset('uploads') }}/images/{{ product.image }}" height="30">
                            {% endif %}</a></td>
                    <td><a href="javascript:openWin('{{ path('admin_image_new', {'pid': product.id})  }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=600,height=500');">
                            <img src="{{ url('admin') }}/images/gallery.png" height="32">
                        </a>
                    </td>
                    <td>{{ product.categoryId }}</td>
                    <td>{{ product.userId }}</td>
                    <td>{{ product.status }}</td>
                    <td data-th="Göster"><a href="{{ path('admin_product_show', {'id': product.id}) }}" class="btn btn-xs btn-primary bg-alert dark text-white fw600 text-center">Göster</a></td>
                    <td data-th="Düzenle"><a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-xs btn-primary bg-danger dark text-white fw600 text-center">Düzenle</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="18">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
        {% endblock %}
